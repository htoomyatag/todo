<p id="notice"><%= notice %></p>

<table class="table table-bordered" style="font-size:12px;">
  <thead>
    <tr>
      <th>Title</th>
      <th>Desc</th>
      <th>Duedate</th>
      <th>Stage</th>
      <th>Categories</th>
      <th>Co-workers</th>
      <th>Creator</th>
      <% if current_user %>
      <th colspan="2"></th>
      <% else %>

      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.duedate %></td>
        <td><%= task.tstage %></td>
        <td><%= task.tcategories %></td>
        <td><%= task.coworker %></td>
        <td><%= task.creator %></td>
        <% if current_user %>
        <td><%= link_to 'Update', taskupdate_path(:id =>task),  :class=>"btn btn-success btn-sm" %></td>
        <td><%= link_to 'Destroy', task, method: :delete,:class=>"btn btn-danger btn-sm", data: { confirm: 'Are you sure?' } %></td>
        <% else %>

        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
